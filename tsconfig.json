{
    "compilerOptions": {
      "pretty": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "target": "ES6",
      "module": "commonjs",
      "lib": ["es5", "es6", "dom"],
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist",
    },
    "include": [
      "src",
      "spec", "webpack.config.js"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
